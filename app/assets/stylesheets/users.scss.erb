@import url(https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900);

/* Custom, iPhone Retina */
@media only screen and (min-width:1px) {
  section.email-form {
    background: url("<%= asset_path('rubyConf_background.png') %>");
    h1,h2,h3,h4,h5,h6,p,span,label {
      color: #FFFFFF;
      font-family: 'Lato', sans-serif;
    }
    h1 {
      &.title1 {
        font-weight: 100;
      }
 
      &.title2 {
        font-weight: 300;
      }

      &.title3 {
        font-weight: 100;
        font-size: 14px;
        word-spacing: 2px;
      }
    }
    .list-inline {
      h4 {
        font-weight: 900;
        font-size: 36px;
      }
      span {
        font-weight: 100;
      }
    }
    .btn-email {
      input {
        background: transparent;
        border: 1px solid #FFF;
        color: #FFF;
      }
    }
  }
}

