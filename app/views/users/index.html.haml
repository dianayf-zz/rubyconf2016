:javascript

    var date_event = new Date(2016, 8, 30, 23, 60);

    function countdown() {
      var now = new Date();
      var difference = date_event - now;

      if (difference > 0) {
        var seconds = Math.round(difference / 1000);
        var minutes = Math.floor(seconds / 60);
        var seconds_s = seconds % 60;
        var hours = Math.floor(minutes / 60);
        var minutes_s = minutes % 60;
        var days = Math.floor(hours / 24);
        var hours_s = hours % 24;

        document.getElementById("days").innerHTML= days;
        document.getElementById("hours").innerHTML= hours_s;
        document.getElementById("minutes").innerHTML= minutes_s;
        document.getElementById("seconds").innerHTML= seconds_s;

        setTimeout("countdown()", 1000);
      }
      else {
        document.getElementById("days").innerHTML= days;
        document.getElementById("hours").innerHTML= hours_s;
        document.getElementById("minutes").innerHTML= minutes_s;
        document.getElementById("seconds").innerHTML= seconds_s;
      }
    }
    countdown();

